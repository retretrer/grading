{
  "name": "Udacity External Grader (beta)",
  "version": "0.05",
  "manifest_version": 2,
  "description": "Run tests against any page.",
  "homepage_url": "http://github.com/udacity/frontend-grading-engine",
  "icons": {
    "16": "icons/udacity-invert16.png",
    "48": "icons/udacity-invert48.png",
    "128": "icons/udacity-invert128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/udacity-invert48.png",
    "default_title": "Udacity Feedback",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "http://udacity.github.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://udacity.github.io/*",
        "http://localhost/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/*.js",
    "fonts/*.css",
    "fonts/*/*",
    "templates/*.html"
  ]
}